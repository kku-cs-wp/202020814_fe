package kr.ac.kku.cs.wp.wsd;

import kr.ac.kku.cs.wp.wsd.dao.BoardDAO;
import kr.ac.kku.cs.wp.wsd.model.Board;

public class TestHibernate {
    public static void main(String[] args) {
        BoardDAO boardDAO = new BoardDAO(HibernateUtil.getSessionFactory());

        // 데이터 생성 테스트
        Board board = new Board("테스트 제목", "테스트 내용");
        boardDAO.saveBoard(board);

        // 데이터 조회 테스트
        Board fetchedBoard = boardDAO.getBoardById(board.getId());
        System.out.println("제목: " + fetchedBoard.getTitle());
        System.out.println("내용: " + fetchedBoard.getContent());
    }
}
