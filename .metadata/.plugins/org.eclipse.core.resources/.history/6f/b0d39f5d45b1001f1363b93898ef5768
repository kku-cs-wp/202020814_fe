package kr.ac.kku.cs.wp.wsd.dao;


import kr.ac.kku.cs.wp.wsd.model.Board;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public class BoardDAO {

    private final SessionFactory sessionFactory;

    @Autowired
    public BoardDAO(SessionFactory sessionFactory) {
        this.sessionFactory = sessionFactory;
    }

    // 모든 게시글 조회
    public List<Board> getAllBoards() {
        try (Session session = sessionFactory.openSession()) {
            return session.createQuery("from Board", Board.class).list();
        }
    }

    // ID로 게시글 조회
    public Board getBoardById(int id) {
        try (Session session = sessionFactory.openSession()) {
            return session.get(Board.class, id);
        }
    }

    // 게시글 저장
    public boolean saveBoard(Board board) {
        try (Session session = sessionFactory.openSession()) {
            session.beginTransaction();
            session.persist(board);
            session.getTransaction().commit();
            return true;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }

    // 게시글 업데이트
    public boolean updateBoard(Board board) {
        try (Session session = sessionFactory.openSession()) {
            session.beginTransaction();
            session.merge(board);
            session.getTransaction().commit();
            return true;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }

    // 게시글 삭제
    public boolean deleteBoard(Board board) {
        try (Session session = sessionFactory.openSession()) {
            session.beginTransaction();
            session.remove(board);
            session.getTransaction().commit();
            return true;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }
}


