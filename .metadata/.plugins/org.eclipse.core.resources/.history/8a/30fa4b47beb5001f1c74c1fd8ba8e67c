package kr.ac.kku.cs.wp.wsd;

import static org.mockito.Mockito.*;
import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;

import kr.ac.kku.cs.wp.wsd.dao.BoardDAO;

class CreateServiceTest {

    @Mock
    private BoardDAO boardDAO;

    @InjectMocks
    private CreateService createService; // CreateService를 정확히 임포트

    @BeforeEach
    void setUp() {
        MockitoAnnotations.openMocks(this);
    }

    @Test
    void testCreateBoard() {
        createService.createBoard("Test Title", "Test Content");
        verify(boardDAO).saveBoard(any());
    }
}
